<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_meter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="@string/str_meter"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间："
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/track1"
            android:layout_width="70dp"
            android:layout_height="match_parent"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/track2"
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/track3"
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="结束时间："
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/track4"
            android:layout_width="70dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="年"
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />


        <EditText
            android:id="@+id/track5"
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="月"
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />


        <EditText
            android:id="@+id/track6"
            android:layout_width="45dp"
            android:layout_height="match_parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日"
            android:textColor="@color/color_1c8dee"
            android:textSize="22sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/btn_find"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_view_border"
        android:gravity="center"
        android:text="记录查询"
        android:textSize="18sp" />
</LinearLayout>

